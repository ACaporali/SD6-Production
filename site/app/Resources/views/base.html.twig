<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{% block title %}{% endblock %}</title>
        {% block head %}{% endblock %}
        {% block stylesheets %}
            <!--Import Google Icon Font-->
            <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            {% stylesheets filter='cssrewrite'
            'css/bootstrap.min.css' 'css/blueimp-gallery.min.css' 'css/custom.css'%}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('sd6_production_app_homepage') }}"><img src="{{ asset('images/accueil/logo-sd6-production.jpg')}}" alt="logo SD6 Production"></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bonjour {{ app.user.username }} <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('sd6_production_app_ajout') }}">Ajouter</a></li>
                                <li><a href="{{ path('fos_user_change_password') }}">Change mot de passe</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    <li><a href="{{ path('sd6_production_app_productions') }}">Productions</a></li>
                    <li><a href="{{ path('sd6_production_app_prestations') }}">Prestations</a></li>
                    <li><a href="{{ path('sd6_production_app_equipe') }}">Équipe</a></li>
                    <li><a href="{{ path('sd6_production_app_actualites') }}">Actualités</a></li>
                    <li><a href="{{ path('sd6_production_app_photos') }}">Photos</a></li>
                    <li><a href="{{ path('sd6_production_app_recrutements') }}">Casting</a></li>
                    <li><a href="{{ path('sd6_production_contact_contact') }}">Contact</a></li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li>
                            <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                        </li>
                    {% endif %}
                </ul>

            </div>
        </div>
        </nav>

        {% block body %}
        {% endblock %}

        <footer class="row">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 coordonnees">
                <h4>Notre studio de production</h4>
                <p>Grenoble</p>
                <p>sd6production@gmail.com</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 plan">
                <h4>Plan du site</h4>
                <a href="{{ path('sd6_production_app_productions') }}">Productions</a>
                <a href="{{ path('sd6_production_app_prestations') }}">Prestations</a>
                <a href="{{ path('sd6_production_app_equipe') }}">Équipe</a>
                <a href="{{ path('sd6_production_app_actualites') }}">Actualités</a>
                <a href="{{ path('sd6_production_app_photos') }}">Photos</a>
                <a href="{{ path('sd6_production_app_recrutements') }}">Casting</a>
                <a href="{{ path('sd6_production_contact_contact') }}">Contact</a>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 rs">
                <h4>Reseaux sociaux</h4>
                <a href="https://www.facebook.com/SD6Production/?fref=ts" target="_blank"><img src="{{ asset('images/facebook.png')}}" alt="facebook SD6 Production"></a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 copyright">
                <p>Copyright {{ 'now'|date('Y') }} SD6 Production. Tous droits réservés.</p>
            </div>
        </footer>

        {% block javascripts %}
            {% javascripts  'js/jquery-3.1.1.min.js''js/bootstrap.min.js''js/blueimp-gallery.min.js''js/app.js''js/jquery.parallax-1.1.3.js'%}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts  %}
        {% endblock %}
    </body>
</html>
