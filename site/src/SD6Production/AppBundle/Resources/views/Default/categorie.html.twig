{% extends "SD6ProductionAppBundle:Include:layout.html.twig" %}

{% block title %}Categorie - {{ parent() }}{% endblock %}

{% block head %}
  {{ parent() }}
  <meta name="description" content="">
  <meta name="keywords" content="">
{% endblock %}

{% block site_body %}
	<div class="categorie">
  	{{ parent() }}
  	<h1 class="beige text-center">Categorie</h1>
    <hr class="hr-beige">
		<div class="bordures">
	  	<div class="row">
		  	<a href="{{ path('sd6_production_app_ajout') }}">Ajouter une categorie</a>
        <div class="liste">
          <table>
            <thead>
              <tr>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
              </tr>
            </thead>
            <tbody>
              {% for categorie in listeCategories %}
                  <tr>
                    <td>{{categorie.nom}}</td>
                    <td><a href="{{path('sd6_production_app_editer_categorie', {'idCategorie': categorie.id})}}">Modifier</a></td>
                    <td><a href="{{path('sd6_production_app_supprimer_categorie', {'idCategorie': categorie.id})}}">Supprimer</a></td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
		  </div>
	  </div>
	</div>

{% endblock %}
