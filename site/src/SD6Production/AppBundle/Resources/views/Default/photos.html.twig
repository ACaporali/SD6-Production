{% extends "SD6ProductionAppBundle:Include:layout.html.twig" %}

{% block title %}Galerie photos - {{ parent() }}{% endblock %}

{% block head %}
  	{{ parent() }}
  	<meta name="description" content="">
  	<meta name="keywords" content="">
{% endblock %}

{% block site_body %}
  	{{ parent() }}
  	<h1>Galerie photos</h1>
  	<div id="links">
  		{% for ImageGalerie in listeImageGalerie %}
  			<a href="{{ asset(''~ImageGalerie.url~'')}}" title="{{ImageGalerie.alt}}"><img src="{{ asset(''~ImageGalerie.url~'')}}" class="img-responsive thumbnail" alt="{{ImageGalerie.alt}}"></a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('sd6_production_app_editer_image', {'idImage': ImageGalerie.id})}}">Editer</a>
            {% endif %}
        {% endfor %}
	</div>
	<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
	    <div class="slides"></div>
	    <h3 class="title"></h3>
	    <a class="prev">‹</a>
	    <a class="next">›</a>
	    <a class="close">×</a>
	    <a class="play-pause"></a>
	    <ol class="indicator"></ol>
	</div>

{% endblock %}
