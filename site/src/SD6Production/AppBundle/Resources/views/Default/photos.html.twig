{% extends "SD6ProductionAppBundle:Include:layout.html.twig" %}

{% block title %}Galerie photos - {{ parent() }}{% endblock %}

{% block head %}
{{ parent() }}
<meta name="description" content="">
<meta name="keywords" content="">
{% endblock %}

{% block site_body %}
  {{ parent() }}
  <div class="galerie">
    <h1>Galerie photos</h1>
    <div class="photos">
      <ul>
        {% for ImageGalerie in listeImageGalerie %}
          <li>
            <a href="{{ asset(''~ImageGalerie.url~'')}}" title="{{ImageGalerie.alt}}"><img src="{{ asset(''~ImageGalerie.url~'')}}" class="img-responsive" alt="{{ImageGalerie.alt}}"></a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('sd6_production_app_editer_image', {'idImage': ImageGalerie.id})}}">Editer</a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

{% endblock %}
