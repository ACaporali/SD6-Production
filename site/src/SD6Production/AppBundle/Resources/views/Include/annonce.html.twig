{% for Annonce in listeAnnonces %}	
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
		<div class="image">
			{% if Annonce.Image is not null %}
				<img src="{{Annonce.Image.Url}}" alt="{{Annonce.Image.Alt}}">
			{% else %}
				<p>Pas de visuel</p>
			{% endif %}
		</div>
		<div class="contenu">
			<div class="titre">
				<h3>{{Annonce.Titre}}</h3>
			</div>
			<div class="accroche">
				<p>{{Annonce.Accroche}}</p>
			</div>
			<div class="date">
				<p>{{Annonce.date|date('d/m/Y')}}</p>
			</div>
			<div class="bouton">
				<a href="{{ path('sd6_production_app_details_annonce',{'typeAnnonce': Annonce.Categories[0].nom, 'nomAnnonce': Annonce.slug}) }}" alt"voir plus">Voir plus</a>

				{{dump(Annonce)}}
			</div>
		</div>
	</div>
{% else %}
	<p>Pas d'annonce disponible.</p>
{% endfor %}