{% extends "SD6ProductionAppBundle:Include:layout.html.twig" %}

{% block title %}Images - {{ parent() }}{% endblock %}

{% block head %}
  {{ parent() }}
  <meta name="description" content="">
  <meta name="keywords" content="">
{% endblock %}

{% block site_body %}
	<div class="admin-images">
  	{{ parent() }}
  	<h1 class="beige text-center">Images</h1>
    <hr class="hr-beige">
		<div class="bordures">
	  	<div class="row">
		  	<a href="{{ path('sd6_production_admin_add_image') }}" class="btn btn-primary">Ajouter une image</a>
        <div class="liste">
          {% for image in images %}
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
            <img src="{{asset(image.url)}}" alt="{{image.alt}}">
            <div class="boutons-admin">
              <div class="btn-group">
                <a href="{{path('sd6_production_admin_edite_image', {'idImage': image.id})}}" class="btn btn-default">Modifier</a>
                <a href="#" class="supprimer btn btn-danger" data-id="{{image.id}}">Supprimer</a>                
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
        </div>
		  </div>
	  </div>
	</div>

{% endblock %}
