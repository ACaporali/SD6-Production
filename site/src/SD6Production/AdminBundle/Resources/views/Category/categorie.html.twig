{% extends "SD6ProductionAppBundle:Include:layout.html.twig" %}

{% block title %}Categories - {{ parent() }}{% endblock %}

{% block head %}
  {{ parent() }}
  <meta name="description" content="">
  <meta name="keywords" content="">
{% endblock %}

{% block site_body %}
	<div class="admin-categories">
  	{{ parent() }}
  	<h1 class="beige text-center">Categories</h1>
    <hr class="hr-beige">
		<div class="bordures">
	  	<div class="row">
		  	<a href="{{ path('sd6_production_admin_add_category') }}">Ajouter une categorie</a>
        <div class="liste">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
              </tr>
            </thead>
            <tbody>
              {% for category in listeCategories %}
                  <tr>
                    <td>{{category.name}}</td>
                    <td>
                      <div class="boutons-admin">
                        <a href="{{path('sd6_production_admin_edite_category', {'idCategory': category.id})}}">Modifier</a>
                      </div>
                    </td>
                    <td>
                      <div class="boutons-admin">
                        <a href="#" class="supprimer" data-id="{{category.id}}" class="supprimer">Supprimer</a>
                      </div>
                    </td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
		  </div>
	  </div>
	</div>

{% endblock %}
